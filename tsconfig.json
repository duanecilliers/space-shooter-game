{
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"sourceMap": true,
		"noImplicitAny": false,
		"strict": false,
		"baseUrl": "src",
		"esModuleInterop": true,
		"paths": {
			"assets": ["assets"],
			"components": ["components"],
			"configs": ["configs"],
			"core": ["core"],
			"entities": ["entities"],
			"scenes": ["scenes"],
			"utils": ["utils"]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/phaser/types",
			"./src/types"
		],
		"types": [
			"Phaser"
		]
	}
}
